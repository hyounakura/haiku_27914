<div class="haiku-top">
<div class="haiku-top__new-title">
ログイン
</div>
</div>

<div class="haiku-middle">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="field__left">
        <%= f.label :email： %>
      </div>
      <div class="field__right">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field">
      <div class="field__left">
        <%= f.label :パスワード %>
      </div>
      <div class="field__right">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>

<div class="haiku-btn">
<div class="haiku-btn__login-path">
<%= link_to new_registration_path(resource_name) do %>
<span>登録</span>
<% end %>
</div>
</div>